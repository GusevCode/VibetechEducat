@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">
                    <i class="bi bi-box-arrow-in-right"></i> Вход в систему
                </h2>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
                    </div>
                }
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-person-badge"></i> Выберите роль
                        </label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="Input.Role" id="student" value="Student" checked>
                            <label class="btn btn-outline-primary" for="student">
                                <i class="bi bi-person"></i> Ученик
                            </label>
                            
                            <input type="radio" class="btn-check" name="Input.Role" id="tutor" value="Tutor">
                            <label class="btn btn-outline-primary" for="tutor">
                                <i class="bi bi-person-badge"></i> Репетитор
                            </label>
                        </div>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Login" class="form-label">
                            <i class="bi bi-person-circle"></i> Логин
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input asp-for="Input.Login" class="form-control" placeholder="Введите логин" autocomplete="username" />
                        </div>
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">
                            <i class="bi bi-key"></i> Пароль
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-key-fill"></i>
                            </span>
                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Введите пароль" autocomplete="current-password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            <i class="bi bi-check2-square"></i> Запомнить меня
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-box-arrow-in-right"></i> Войти
                    </button>

                    <div class="text-center">
                        <a asp-page="/Account/Register" class="btn btn-link">
                            <i class="bi bi-person-plus"></i> Нет аккаунта? Зарегистрируйтесь
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 