@page
@model LogoutModel
@{
    ViewData["Title"] = "Выход";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title">Вы уверены, что хотите выйти?</h4>
                    <form method="post">
                        <button type="submit" class="btn btn-danger mt-3">Выйти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 